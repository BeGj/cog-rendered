        "target": "ESNext",
        "module": "ESNext",
        "lib": [
            "ESNext",
            "DOM",
            "DOM.Iterable"
        ],
        "declaration": true,
        "outDir": "./dist",
        "strict": true,
        "moduleResolution": "bundler",
        "skipLibCheck": true,
        "types": [
            "@webgpu/types"
        ]
    },
    "include": [
        "src/**/*"
    ]
}